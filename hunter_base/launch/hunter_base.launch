<launch>

    <!-- 设置参数 -->
    <!--param name="robot_description" textfile="$(find hunter_base)/urdf/urdf/hunter_x.urdf" /-->
    <param name="robot_description" command="$(find xacro)/xacro $(find hunter_gazebo)/urdf/hunter.urdf.xacro" />

    <!-- 启动 rviz -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find hunter_base)/config/hunter_base.rviz" />

    <!-- 启动机器人状态和关节状态发布节点 -->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" />

    <!-- 启动图形化的控制关节运动节点 -->
    <node pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" name="joint_state_publisher_gui" />

</launch>

